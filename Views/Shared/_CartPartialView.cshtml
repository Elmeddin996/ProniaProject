@model BasketViewModel
<div class ="offcanvas-minicart_wrapper" id="miniCart">
    <div class="offcanvas-body">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">Shopping Cart</h4>
                <a href="#" class="button-close" id="closeButton">
                    <i class="pe-7s-close"
                       data-tippy="Close"
                       data-tippy-inertia="true"
                       data-tippy-animation="shift-away"
                       data-tippy-delay="50"
                       data-tippy-arrow="true"
                       data-tippy-theme="sharpborder"></i>
                </a>

            </div>
            <ul class="minicart-list">
                @foreach (var item in Model.BasketItems)
                {
                    <li class="minicart-product">
                        <a asp-action="removebasket" asp-controller="plant" asp-route-id="@item.Plant.Id" class="product-item_remove removefrombasket" >
                            <i class="pe-7s-close"
                               data-tippy="Remove"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder"></i>
                        </a>
                        <a href="single-product-variable.html"
                           class="product-item_img">
                            <img class="img-full"
                                 src="~/uploads/plants/@item.Plant.PlantImages.FirstOrDefault(x=>x.PosterStatus==true)?.ImageName"
                                 alt="Product Image" />
                        </a>
                        <div class="product-item_content">
                            <a class="product-item_title"
                               href="single-product-variable.html">@item.Plant.Name</a>
                            <span class="product-item_quantity">@item.Count x $@item.Plant.SalePrice</span>
                        </div>
                    </li>
                }

            </ul>
        </div>
        <div class="minicart-item_total">
            <span>Subtotal</span>
            <span class="ammount">$@Model.TotalPrice.ToString("0.00")</span>
        </div>
        <div class="group-btn_wrap d-grid gap-2">
            <a asp-controller="plant" asp-action="viewcart" class="btn btn-dark">View Cart</a>
            <a asp-controller="order" asp-action="checkout" class="btn btn-dark">Checkout</a>
        </div>
    </div>
</div>
<div class="global-overlay"></div>
