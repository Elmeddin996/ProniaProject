@model MemberLoginViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row h-100">
    <div class="col-lg-12">
        <div class="breadcrumb-item">
            <h2 class="breadcrumb-heading">Login Page</h2>
            <ul>
                <li>
                    <a href="/home/index">Home</a>
                </li>
                <li>Login</li>
            </ul>
            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <form method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Login</h4>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label asp-for="UserName">Username</label>
                                            <input asp-for="UserName" placeholder="UserName" />
                                            <span class="text-danger" asp-validation-for="UserName"></span>

                                        </div>
                                        <div class="col-lg-12">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" placeholder="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>

                                        </div>
                                        <div class="col-md-8">
                                            <div class="check-box">
                                                <input type="checkbox" name="rememberMe" />
                                                <label for="remember_me">Remember me</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4 pt-1 mt-md-0">
                                            <div class="forgotton-password_info">
                                                <a asp-action="forgetpassword"> Forgotten pasward?</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-12  mb--30">
                                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        </div>
                                        <div class="col-lg-12 pt-5">
                                            <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                                Login
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

