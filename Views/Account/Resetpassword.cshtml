@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Login";
}


<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Reset Password</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Reset Password</h4>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input asp-for="ConfirmPassword" class="mb-0 form-control" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <input name="Email" type="hidden" value="@ViewBag.Email" />
                            <input name="Token" type="hidden" value="@ViewBag.Token" />

                            <div class="col-md-12">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Change Password
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
