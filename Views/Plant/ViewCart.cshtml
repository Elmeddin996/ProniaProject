@model BasketViewModel

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Cart Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Cart Page</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form method="post" asp-controller="order" asp-action="checkout">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">images</th>
                                        <th class="cart-product-name">Product</th>
                                        <th class="product-price">Unit Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.BasketItems)
                                    {
                                        <tr>
                                         
                                            <td class="product-thumbnail">
                                                <img class="img-full"
                                                     src="~/uploads/plants/@item.Plant.PlantImages.FirstOrDefault(x=>x.PosterStatus==true)?.ImageName"
                                                     alt="Product Image" />
                                            </td>
                                            <td class="product-name">
                                                <a class="product-item_title"
                                                   asp-action="detail" asp-route-id="@item.Plant.Id">@item.Plant.Name</a>
                                            </td>
                                            <td class="product-price">
                                                <span class="amount">$@item.Plant.SalePrice</span>
                                            </td>
                                            <td class="quantity">
                                                <div class="cart-plus-minus">
                                                    <input class="cart-plus-minus-box"
                                                           value="@item.Count"
                                                           type="text" />
                                                   
                                                </div>
                                            </td>
                                            <td class="product-subtotal">
                                                <span class="amount">$@(item.Plant.SalePrice*item.Count)</span>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="coupon-all">
                                    <div class="coupon col-md-12">
                                        <input class="button "
                                               value="Checkout"
                                               type="submit" />
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
