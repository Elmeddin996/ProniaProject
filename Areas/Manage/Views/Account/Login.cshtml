@model AdminLoginViewModel
<div class="card card-authentication1 col-md-6 mx-auto my-5">
    <div class="card-body">
        <div class="card-content p-2">
            <div class="text-center">
                <img src="~/images/download.png" alt="logo icon">
            </div>
            <div class="card-title text-uppercase text-center py-3">Sign In</div>
            <form class="user" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername" class="sr-only">Username</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="UserName" class="form-control form-control-user" placeholder="Enter Username">
                       
                    </div>
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword" class="sr-only">Password</label>
                    <div class="position-relative has-icon-right">
                        <input asp-for="Password" class="form-control form-control-user" placeholder="Enter Password">
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-light btn-block">Sign In</button>
            </form>
        </div>
    </div>

</div>
